@model dynamic

<h2>Product List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Create Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductId</td>
                <td>@p.ProductName</td>
                <td>@p.CategoryId</td>
                <td>@p.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.ProductId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@p.ProductId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div>
    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
    {
        if (i == (int)ViewBag.CurrentPage)
        {
            <span class="btn btn-secondary">@i</span>
        }
        else
        {
            <a href="?page=@i" class="btn btn-outline-secondary">@i</a>
        }
    }
</div>
